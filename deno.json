{
  "$schema": "https://deno.land/x/deno@v1.41.0/cli/schemas/config-file.v1.json",
  "tasks": {
    "dev": "deno run -A --watch src/server.ts"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "imports": {
    "@nostrify/nostrify": "jsr:@nostrify/nostrify@^0.9.7",
    "@wcj/html-to-markdown": "npm:@wcj/html-to-markdown@^2.0.0",
    "hono": "https://deno.land/x/hono@v4.2.3/mod.ts",
    "nostr-tools": "npm:nostr-tools@^2.5.0",
    "zod": "npm:zod@^3.22.4"
  }
}
